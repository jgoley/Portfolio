.home
  padding 0
  .badge
    +above($mobile)
      background url(../images/badge_no-name.svg) no-repeat
    +above($tablet)
      display block
      right 25px
      left auto
  .jgo-name
    +between($mobile, $tablet)
      display block
      &:hover
        margin-right 5px

  header
    position static

  .page-nav
    ul
      overflow hidden
    li
      +above($tablet)
        &:first-of-type
          flex 1 1 $primaryRole
          height $primaryRole
          text-align left
          align-self flex-start
        a
          &:hover
            padding-left 15px
      +above($tablet)
        flex 1 1 $otherRoles
        height $otherRoles

.about
  position absolute
  bottom 0
  left 0
  margin 0 1em 1em
  > a
    font-family 'din'
    font-size 3em
    text-transform uppercase
  a
    color #CCC
    &:hover
      color $secondary
  ul
    display flex
  li
    margin-right .5em
    font-size 2em
    &:first-of-type
      margin-right .75em
